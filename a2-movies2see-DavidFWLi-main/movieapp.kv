<MovieApp>:
    orientation: 'vertical'
    padding: 10

    BoxLayout:
        orientation: 'vertical'
        spacing: 10

        BoxLayout:
            size_hint_y: None
            height: '48dp'
            orientation: 'horizontal'
            spacing: 10

            TextInput:
                id: title_input
                multiline: False
                hint_text: 'New Movie'
                font_size: '20sp'

            Button:
                text: 'Category'
                size_hint: (0.2, 1)  # 设置按钮宽度为输入框的20%

        GridLayout:
            cols: 2
            spacing: 10

            Button:
                id: add_button
                text: 'Add Movie'
                size_hint_y: None
                height: '48dp'
                on_press: app.add_movie()

            Button:
                text: 'Clear'
                size_hint_y: None
                height: '48dp'
                on_press: app.clear_inputs()

            Label:
                text: 'Title:'
            TextInput:
                id: title_input
                multiline: False

            Label:
                text: 'Year:'
            TextInput:
                id: year_input
                input_type: 'number'

            Label:
                text: 'Category:'
            TextInput:
                id: category_input
                multiline: False

        Label:
            id: movie_count_label
            text: 'Movies to Watch: 5 | Movies Watched: 10'
            size_hint_y: None
            height: '48dp'

        ScrollView:
            do_scroll_x: False

            BoxLayout:
                orientation: 'vertical'
                spacing: 5

                Label:
                    text: 'Welcome to Movie2see :)'
                    font_size: '20sp'

                Button:
                    text: 'Sample Movie 1'
                    size_hint_y: None
                    height: '40dp'
                    canvas.before:
                        Color:
                            rgba: (0, 88, 88, 1)

                Button:
                    text: 'Sample Movie 2'
                    size_hint_y: None
                    height: '40dp'
                    canvas.before:
                        Color:
                            rgba: (88, 88, 0, 1)