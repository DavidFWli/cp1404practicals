# app.kv

<Movies2SeeApp>:
    orientation: 'vertical'
    padding: 10

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10

        BoxLayout:
            orientation: 'vertical'
            spacing: 10

            Label:
                text: 'Title:'
            TextInput:
                id: title_input
                multiline: False

            Label:
                text: 'Year:'
            TextInput:
                id: year_input
                input_type: 'number'

            Label:
                text: 'Category:'
            TextInput:
                id: category_input
                multiline: False

            CheckBox:
                id: watched_checkbox
                text: 'Watched'
                active: False

            Button:
                id: add_button
                text: 'Add Movie'
                size_hint_y: None
                height: '48dp'
                on_press: app.add_movie()

        ScrollView:
            do_scroll_x: false

            BoxLayout:
                id: movie_info_layout
                orientation: 'vertical'
                spacing: 5
                size_hint_x: None
                width: '200dp'
